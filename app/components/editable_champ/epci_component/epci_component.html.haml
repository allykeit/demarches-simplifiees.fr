.fr-fieldset__element
  = @form.label :code_departement, for: @champ.code_departement_input_id, class: 'fr-label', id: @champ.code_departement_input_label_id do
    - "Le département de l’EPCI"
  = @form.select :code_departement, departement_options, departement_select_options, required: @champ.required?, id: @champ.code_departement_input_id, class: "width-33-desktop width-100-mobile fr-select", aria: { labelledby: labelledby_id(@champ.code_departement_input_label_id) }

- if @champ.departement?
  .fr-fieldset__element
    .fr-select-group
      = @form.label :value, for: @champ.epci_input_id, class: 'fr-label', id: @champ.epci_input_label_id do
        - "EPCI"
      = @form.select :value, epci_options, epci_select_options, required: @champ.required?, id: @champ.epci_input_id, class: "width-33-desktop width-100-mobile fr-select", aria: { labelledby: labelledby_id(@champ.epci_input_label_id) }
