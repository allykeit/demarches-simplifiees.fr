%p= champ.to_s
- if champ.full_address?
  - if champ.france?
    - if champ.ban?
      %p.fr-text--sm
        L'adresse provient de la
        = link_to 'BAN', 'https://adresse.data.gouv.fr/decouvrir-la-BAN'
    %p.fr-text--sm
      Code INSEE :
      = champ.city_code
    %p.fr-text--sm
      Departement :
      = champ.departement_code_and_name
  - else
    %p.fr-text--sm
      Pays :
      = champ.country_name
